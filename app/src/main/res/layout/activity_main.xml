<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/csl_root">

    <com.shwho.preloadingview.PreLoadingView
        android:id="@+id/plv_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:plv_animationDuration="3"
        app:plv_defaultAnimation="down_to_up"
        app:plv_holderTwoColor="#7abcff"
        app:plv_holderOneColor="#7abcff"/>


    <com.shwho.preloadingview.PreLoadingView
        android:id="@+id/plv_view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:plv_defaultAnimation="up_to_down"
        app:plv_holderTwoColor="#FF7B7B"
        app:plv_holderOneColor="#FF7B7B"
        app:plv_holderTwoCornerRadius="4"
        app:plv_isHolderTwoDimenDynamic="true"
        app:plv_layoutType="list"
        app:plv_animationDuration="3"
        app:plv_listItemCount="18"
        />

    <com.shwho.preloadingview.PreLoadingView
        android:id="@+id/plv_view3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:plv_defaultAnimation="up_to_down"
        app:plv_holderTwoColor="#7abcff"
        app:plv_holderOneColor="#7abcff"
        app:plv_holderTwoCornerRadius="4"
        app:plv_isHolderTwoDimenDynamic="true"
        app:plv_holderOneVisibility = "gone"
        app:plv_layoutType="grid"
        app:plv_animationDuration="5"
        app:plv_listItemCount="28"
        />

    <com.shwho.preloadingview.PreLoadingView
        android:id="@+id/plv_view4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:plv_defaultAnimation="left_to_right"
        app:plv_holderTwoCornerRadius="4"
        app:plv_isHolderTwoDimenDynamic="false"
        app:plv_holderOneVisibility = "gone"
        app:plv_holderTwoColor ="#99d18f"
        app:plv_layoutType="grid"
        app:plv_animationDuration="3"
        app:plv_listItemCount="28"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
